    <!-- JavaScript Logic -->
    <script>
        // 1. Dark Mode Toggle
        const themeToggleBtn = document.getElementById('theme-toggle');
        const htmlElement = document.documentElement;
        
        themeToggleBtn.addEventListener('click', () => {
            htmlElement.classList.toggle('dark');
            if (htmlElement.classList.contains('dark')) {
                localStorage.setItem('theme', 'dark');
            } else {
                localStorage.setItem('theme', 'light');
            }
            updateChartsTheme();
        });

        // 2. Countdown Timer (Target: 2025-12-25 12:25:25)
        const targetDate = new Date("December 25, 2025 12:25:25").getTime();
        
        setInterval(function() {
            const now = new Date().getTime(); // Note: This uses user's system time.
            // For demo purposes, if today is before 2025, it works. 
            // If user is in 2024, it will show a long countdown.
            
            const distance = targetDate - now;
            
            if (distance < 0) {
                document.getElementById("countdown").innerHTML = "MERRY CHRISTMAS!";
            } else {
                const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);
                
                document.getElementById("countdown").innerHTML = 
                    `${days}d ${hours}h ${minutes}m ${seconds}s`;
            }
        }, 1000);

        // 3. Tab Switching Logic
        function openTab(evt, tabName) {
            var i, tabcontent, tablinks;
            tabcontent = document.getElementsByClassName("tab-content");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].classList.add("hidden");
                tabcontent[i].classList.remove("block");
            }
            tablinks = document.getElementsByClassName("tab-btn");
            for (i = 0; i < tablinks.length; i++) {
                tablinks[i].classList.remove("tab-active");
                tablinks[i].classList.add("text-gray-500");
            }
            document.getElementById(tabName).classList.remove("hidden");
            document.getElementById(tabName).classList.add("block");
            evt.currentTarget.classList.add("tab-active");
            evt.currentTarget.classList.remove("text-gray-500");
        }

        // 4. Checklist Toggle
        function toggleCheck(element) {
            const icon = element.querySelector('i');
            element.classList.toggle('checked');
            if (element.classList.contains('checked')) {
                icon.classList.remove('fa-square');
                icon.classList.add('fa-check-square');
                element.classList.add('bg-gray-200', 'dark:bg-gray-600');
            } else {
                icon.classList.add('fa-square');
                icon.classList.remove('fa-check-square');
                element.classList.remove('bg-gray-200', 'dark:bg-gray-600');
            }
        }

        // 5. Table Search
        document.getElementById('tableSearch').addEventListener('keyup', function() {
            var value = this.value.toLowerCase();
            var rows = document.querySelectorAll("#festivalTable tbody tr");
            
            rows.forEach(function(row) {
                var text = row.textContent.toLowerCase();
                row.style.display = text.indexOf(value) > -1 ? "" : "none";
            });
        });

        // 6. Accordion Toggle
        function toggleAccordion(id) {
            const content = document.getElementById(id);
            const icon = document.getElementById('icon-' + id);
            
            if (content.classList.contains('hidden')) {
                content.classList.remove('hidden');
                icon.style.transform = 'rotate(180deg)';
            } else {
                content.classList.add('hidden');
                icon.style.transform = 'rotate(0deg)';
            }
        }

        // 7. Charts Initialization
        let themeChart, visitorChart;

        function initCharts() {
            const isDark = htmlElement.classList.contains('dark');
            const textColor = isDark ? '#e5e7eb' : '#374151';

            // Chart 1: Theme Distribution
            const ctx1 = document.getElementById('themeChart').getContext('2d');
            themeChart = new Chart(ctx1, {
                type: 'doughnut',
                data: {
                    labels: ['마켓/쇼핑', '빛축제', '테마파크', '전시/공연'],
                    datasets: [{
                        data: [40, 30, 20, 10],
                        backgroundColor: ['#D42426', '#165B33', '#F8B229', '#2d3748'],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: { position: 'bottom', labels: { color: textColor } }
                    }
                }
            });

            // Chart 2: Visitor Estimation (Bar)
            const ctx2 = document.getElementById('visitorChart').getContext('2d');
            visitorChart = new Chart(ctx2, {
                type: 'bar',
                data: {
                    labels: ['광화문', '더현대', '잠실', '부산'],
                    datasets: [{
                        label: '예상 혼잡도 (단위: 만명/일)',
                        data: [15, 8, 12, 10],
                        backgroundColor: '#165B33',
                        borderRadius: 5
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: { ticks: { color: textColor }, grid: { color: isDark ? '#374151' : '#e5e7eb' } },
                        x: { ticks: { color: textColor }, grid: { display: false } }
                    },
                    plugins: {
                        legend: { labels: { color: textColor } }
                    }
                }
            });
        }

        function updateChartsTheme() {
            if(themeChart) themeChart.destroy();
            if(visitorChart) visitorChart.destroy();
            initCharts();
        }

        // Initialize Charts on Load
        window.addEventListener('load', initCharts);

    </script>
</body>
</html>
